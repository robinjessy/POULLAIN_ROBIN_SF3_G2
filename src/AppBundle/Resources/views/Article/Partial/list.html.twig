{% block body %}
<h2 style="text-align: center" >Listes des Aricles !</h2>
    <hr>
        {% for name in articles %}
            <h4>Article {{ name.title }}</h4>
            <div class="bs-component">
                <blockquote>
                    <p>{{ name.content }}</p>
                    <small>{{ name.author }}</small>
                </blockquote>
                <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div>
        {% else %}
            <li>Pas d'article trouv√©.</li>
        {% endfor %}

{% endblock %}


