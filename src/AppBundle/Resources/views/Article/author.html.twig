{% extends('::base.html.twig') %}

{% block title %}
    List article Auteur
{% endblock %}

{% block body %}
    <h2 style="text-align: center" > <strong style="color:#F2385A; font-size: 60px">Listes</strong> <small style="color: #3AA1BF;"> Des </small><b style="color: #56D9CD;">Article!</b></h2>
    <hr>
    <div>

    {% for article in articles %}
    <h4><a href="{{ path('_show', {'id': name.id} ) }}">{{ article.title }}</a></h4>
    <div class="bs-component">
        <blockquote>
            <p>{{ article.content }}</p>
            <small><a href="{{ path('article_author', {'author': article.author} ) }}">{{ article.author }}</a></small>
        </blockquote>
        {% else %}
            <li>Pas d'article trouv√©.</li>
        {% endfor %}

{% endblock %}